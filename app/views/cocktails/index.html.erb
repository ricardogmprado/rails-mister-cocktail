<div class = "container">

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.getinapp.com.br/8684aab5e5b60d09448f22d1e4c8319c9e34a6ee.jpg);">
  <div class="container">
  <h1>Rabo de Galo</h1>
  <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="cards mt-3 mb-3">

  <% @cocktails.each do |cocktail| %>
<%= link_to  cocktail_path(cocktail) do %>

  <% if !cocktail.photo.blank? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <%= cocktail.name %>
    </div>
    <% end %>
  <% end %>
  <% end %>

</div>


